{
  "name": "javascript-notebook",
  "version": "0.10.0",
  "description": "A client-side javascript notebook",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:local": "npm run clean && parcel build src/index.html --dist-dir docs/ --public-url / --no-optimize && npm run copy:all",
    "build:path": "npm run clean && parcel build src/index.html --dist-dir notebook/ --public-url /notebook/ --no-optimize && mkdir notebook/examples notebook/lib notebook/legal && cp src/examples/* notebook/examples/. && cp src/lib/* notebook/lib/. && cp src/legal/* notebook/legal/.",
    "start:path": "http-server notebook",
    "watch:path": "parcel watch src/index.html --dist-dir notebook/ --public-url http://localhost:8080/notebook/",
    "build:github": "npm run clean && parcel build src/index.html --dist-dir docs/ --public-url /notebook/  && npm run copy:all",
    "build:apps": "npm run clean && parcel build src/index.html --dist-dir docs/ --public-url /notebook/ && npm run copy:all",
    "start": "http-server docs",
    "watch": "parcel watch src/index.html --dist-dir docs/ --public-url /",
    "clean": "rm -rf docs/* && rm -rf ./parcel-cache",
    "copy:examples": "mkdir docs/examples && cp src/examples/* docs/examples/.",
    "copy:lib": "mkdir docs/lib && cp src/lib/* docs/lib/.",
    "copy:legal": "mkdir docs/legal && cp legal/* docs/legal/.",
    "copy:all": "npm run copy:examples && npm run copy:lib && npm run copy:legal",
    "deploy": "npm run build:apps && rm -rf /var/www/html/apps.verticesandedges.net/notebok/* && cp ./docs/* /var/www/html/apps.verticesandedges.net/notebook/."
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/mooreolith/notebook.git"
  },
  "keywords": [
    "js",
    "notebook"
  ],
  "author": "Joshua M. Moore <mooreolith@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mooreolith/notebook/issues"
  },
  "homepage": "https://github.com/mooreolith/notebook",
  "dependencies": {
    "@codemirror/commands": "^6.8.0",
    "@codemirror/lang-javascript": "^6.2.3",
    "@codemirror/lang-markdown": "^6.3.2",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.36.4",
    "codemirror": "^6.0.1",
    "lmdb": "^3.3.0",
    "marked": "^15.0.7",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@parcel/packager-raw-url": "^2.16.3",
    "@parcel/service-worker": "^2.16.3",
    "@parcel/transformer-webmanifest": "^2.16.3",
    "parcel": "2.16.3",
    "process": "^0.11.10"
  }
}
